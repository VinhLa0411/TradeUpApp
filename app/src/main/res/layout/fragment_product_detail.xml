<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="70dp"
    android:background="#f8f9fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <!-- Slider ảnh -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="16dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerImages"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <!-- Dots -->
        <LinearLayout
            android:id="@+id/layoutDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Thông tin sản phẩm -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá: 12.000.000 VNĐ"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#009688"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvBrand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hãng: Honda"
                android:textSize="15sp"
                android:textColor="#424242"/>

            <TextView
                android:id="@+id/tvYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024"
                android:textSize="15sp"
                android:textColor="#424242"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng: 7"
            android:textSize="15sp"
            android:textColor="#424242"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tvOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người đăng: Mr.Bean"
            android:textColor="#1976D2"
            android:textStyle="italic"
            android:textSize="15sp"
            android:layout_marginBottom="12dp"/>

        <!-- Mô tả -->
        <TextView
            android:id="@+id/tvDescriptionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả sản phẩm"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Không có mô tả"
            android:textSize="15sp"
            android:textColor="#555"
            android:layout_marginBottom="22dp"/>

        <!-- Đánh giá sản phẩm -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đánh giá sản phẩm"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginTop="8dp" />

        <RatingBar
            android:id="@+id/productRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="true"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvProductReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(0 đánh giá)"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginBottom="12dp" />

        <!-- Đánh giá người bán -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đánh giá người bán"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#212121" />

        <RatingBar
            android:id="@+id/sellerRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="true"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvSellerReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(0 đánh giá)"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginBottom="22dp" />

        <!-- Nút liên hệ và thanh toán -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnContact"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Liên hệ"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:backgroundTint="#1976D2"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                android:elevation="3dp" />

            <Button
                android:id="@+id/btnPay"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Thanh toán"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:backgroundTint="#009688"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:elevation="3dp" />
        </LinearLayout>

        <!-- Nút đánh giá (nằm riêng bên dưới) -->
        <Button
            android:id="@+id/btnReview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Đánh giá"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:backgroundTint="#FF9800"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:elevation="3dp"/>
    </LinearLayout>
</ScrollView>